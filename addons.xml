<?xml version='1.0' encoding='UTF-8'?>
<addons>
<!-- FAMILYFLIX REPOSITORY -->
<addon id="repository.familyflix" name="FamilyFlix Repository" provider-name="triffalin" version="1.0.0">
	<requires>
		<import addon="xbmc.addon" version="12.0.0"/>
	</requires>
	<extension point="xbmc.addon.repository" name="FamilyFlix Repository">
		<dir>
			<info compressed="false">https://triffalin.github.io/repository.familyflix/addons.xml</info>
			<checksum>https://triffalin.github.io/repository.familyflix/addons.xml.md5</checksum>
			<datadir zip="true">https://triffalin.github.io/repository.familyflix/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">FamilyFlix Repository</summary>
		<summary lang="ro_RO">Repository FamilyFlix</summary>
		<description lang="en">Repository for FamilyFlix skin and all required addons.</description>
		<description lang="ro_RO">Repository pentru skinul FamilyFlix și toate addon-urile necesare.</description>
		<platform>all</platform>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
	</extension>
</addon>

<!-- FAMILYFLIX SKIN -->
<addon id="skin.familyflix" version="1.0.1" name="FamilyFlix" provider-name="Pathfinder">
	<requires>
		<import version="5.17.0" addon="xbmc.gui"/>
		<import addon="script.bingie.helper" version="1.1.2"/>
		<import addon="script.bingie.toolbox" version="1.0.0"/>
		<import addon="script.bingie.widgets" version="1.0.1"/>
		<import addon="script.skinshortcuts" version="2.0.3"/>
		<import addon="resource.images.studios.coloured" version="1.0.0" />
		<import addon="plugin.video.tmdb.bingie.helper" version="1.0.1" />
		<import addon="plugin.program.autocompletion" version="2.1.3" />
	</requires>
	<extension debugging="true" defaultthemename="Textures.xbt" effectslowdown="1" point="xbmc.gui.skin">
        <res aspect="16:9" default="true" folder="1080i" height="1080" width="1920" />
    </extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">FamilyFlix - Your family's streaming hub!</summary>
		<summary lang="ro_RO">FamilyFlix - Hub-ul de streaming al familiei!</summary>
		<description lang="en_GB">FamilyFlix - The home of your family's favorite movies and shows!</description>
		<description lang="ro_RO">FamilyFlix - Casa filmelor și serialelor preferate ale familiei!</description>
		<platform>all</platform>
		<license>GPL v2.0</license>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
		</assets>
	</extension>
</addon>

<!-- PLUGINS -->
<addon id="plugin.video.tmdb.bingie.helper"
version="1.0.2"
name="TMDb Bingie Helper"
provider-name="jurialmunkey,matke">
<requires>
  <import addon="xbmc.python" version="3.0.1"/>
  <import addon="script.module.requests" version="2.9.1"/>
  <import addon="script.module.pil" version="1.1.7"/>
  <import addon="script.module.addon.signals" version="0.0.6" />
  <import addon="script.module.bingie" version="1.0.0" />
  <import addon="script.module.infotagger" version="0.0.5" />
  <import addon="script.module.beautifulsoup4" version="4.9.3" />
  <import addon="script.module.qrcode" version="6.1.0" />
</requires>
<extension point="xbmc.python.pluginsource" library="resources/plugin.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.python.script" library="resources/script.py" />
<extension point="xbmc.service" library="resources/service.py" />
<extension point="xbmc.python.module" library="resources/modules"/>
<extension point="xbmc.addon.metadata">
  <reuselanguageinvoker>false</reuselanguageinvoker>
  <summary lang="en_GB">TMDb Bingie Helper</summary>
  <description lang="en_GB">TMDb Bingie Helper provides details about movies, tvshows and actors from TMDb.</description>
  <license>GPL-3.0-or-later</license>
  <assets>
    <icon>icon.png</icon>
    <fanart>fanart.jpg</fanart>
  </assets>
</extension>
</addon>

<addon id="plugin.program.autocompletion" name="AutoCompletion for virtual keyboard" version="2.1.3" provider-name="Philipp Temminghoff (phil65), sualfred, xulek, finkleandeinhorn">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.autocompletion" version="2.0.5"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.python.pluginsource" library="plugin.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AutoCompletion for the virtual keyboard</summary>
        <description lang="en_GB">AutoCompletion for the virtual keyboard (needs skin support)</description>
        <platform>all</platform>
        <license>GPL-2.0-or-later</license>
        <assets>
            <icon>resources/icon.png</icon>
        </assets>
    </extension>
</addon>

