		<description lang="ro_RO">FamilyFlix - Casa filmelor È™i serialelor preferate ale familiei!</description>
		<platform>all</platform>
		<license>GPL v2.0</license>
		<forum></forum>
		<source></source>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
		</assets>
	</extension>
</addon>
